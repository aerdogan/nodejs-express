extends layout

block content
  -data = data || {}

  if errors
      for error in errors
        .alert.alert-danger.alert-dismissible.fade-in(role="alert")
          
          button.close(type="button" data-dismiss="alert" aria-label="Close")
            span(aria-hidden="true") ×
          p 
            i.bi.bi-exclamation-octagon-fill 
            =error.msg
            
         
  form(action="." method="POST" class="form-registration")
    .form-row
      .form-group.col-md-6
        label(for="name") İsim :
        input(
          type="text"
          id="name"
          name="name"
          class="form-control form-control-sm"
          value=data.name
        )
      .form-group.col-md-6
        label(for="email") E-Posta :
        input(
          type="email"
          id="email"
          name="email"
          class="form-control form-control-sm"
          value=data.email
        )
      .form-group.col-md-6
        input(
          type="submit"
          value="Kaydet"
          class="btn btn-sm btn-primary"
        )
